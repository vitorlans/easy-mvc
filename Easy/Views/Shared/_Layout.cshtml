@{
    var emp = Easy.Models.Empresas.RecuperaEmpresaCookie();
    if(emp == null){
        ViewBag.Empresa = "###";
    }
    else{
        ViewBag.Empresa = emp.NomeEmpresa;
    }

    var user = Easy.Models.Usuario.VerificaSeOUsuarioEstaLogado();
    if (user == null)
    {
        ViewBag.Usuario = "###";
    }
    else
    {
        ViewBag.Usuario = user.Nome;
    }
    
}

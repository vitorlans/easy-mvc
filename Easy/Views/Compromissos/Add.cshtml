@model Easy.Models.Compromissos
@{
    ViewBag.Title = "Novo Compromisso";
}
<div class="bs-docs-section">
<div class="row">
<div class="col-lg-9">
<div class="well bs-component">
            <form class="form-horizontal">
              <fieldset>
                <legend draggable="true">Novo Compromisso</legend>
                  @Html.ValidationSummary(true)
                <div class="form-group" draggable="true">
                  <label for="inputTitulo" class="col-lg-2 control-label">Título</label>
                  <div class="col-lg-10">
                      @Html.TextBoxFor(model => model.Titulo, new { @Id="inputTitulo", @class="form-control", @placeholder="Título", @type="text"})
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputDescricao" class="col-lg-2 control-label">Descrição</label>
                  <div class="col-lg-10">
                      @Html.TextAreaFor(model => model.Descricao, new { @Id="inputDescricao", @class="form-control", @placeholder="Descrição"})
                  </div>
                </div>
                <div class="form-group" draggable="true">
                  <label for="inputDataInicio" class="col-lg-2 control-label">Data de Início</label>
                  <div class="col-lg-10">
                      @Html.TextBoxFor(model => model.DataInicio, new { @Id="inputDataInicio", @class="form-control", @type="date"})
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputDataTermino" class="col-lg-2 control-label">Data de Término</label>
                  <div class="col-lg-10">
                      @Html.TextBoxFor(model => model.DataTermino, new { @Id="inputDataTermino", @class="form-control", @type="date"})
                  </div>
                </div>
                <div class="form-group" draggable="true">
                  <label for="inputParticipantes" class="col-lg-2 control-label">Participantes</label>
                  <div class="col-lg-10">
                      @Html.TextBoxFor(model => model.Usuario, new { @Id="inputParticipantes", @class="form-control", @placeholder="Participantes", @type="text"})
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-lg-10 col-lg-offset-2">
                    <button class="btn btn-primary" type="submit">Adicionar</button>
                  </div>
                </div>
              </fieldset>
            </form>
          </div>
    </div>
    </div>
    </div>
@model IEnumerable<Easy.Models.Usuario>
@{
    ViewBag.Title = "Contatos";
}
<br />
<div class="row">
    <h2>Contatos</h2>
    <a href="~/Contatos/Add" style="margin-left: 90%" class="btn btn-fab btn-primary btn-raised icon-material-add"></a>
    <br />
    <br />
    <div>
        <form action="/Contatos" class=" form-horizontal" method="post">

            <div class="col-md-4">
                <div>
                    <div class="form-control-wrapper">
                        <input type="search" class="form-control empty" placeholder="Pesquisa" name="pesquisa">
                        <span class="material-input"></span>
                    </div>
                </div>
                <br>
            </div>
            <div>
                &nbsp;
              <input type="submit" class="btn btn-success btn-xs color_button withripple mdi-content-send" value="Procurar">
            </div>
        </form>

    </div>


    <br />
    <ul class="pagination">
        <li><a href="/Contatos/Alfa?letra=TD"><i class="mdi-navigation-more-vert"></i></a></li>
        <li><a href="/Contatos/Alfa?letra=A">A</a></li>
        <li><a href="/Contatos/Alfa?letra=B">B</a></li>
        <li><a href="/Contatos/Alfa?letra=C">C</a></li>
        <li><a href="/Contatos/Alfa?letra=D">D</a></li>
        <li><a href="/Contatos/Alfa?letra=E">E</a></li>
        <li><a href="/Contatos/Alfa?letra=F">F</a></li>
        <li><a href="/Contatos/Alfa?letra=G">G</a></li>
        <li><a href="/Contatos/Alfa?letra=H">H</a></li>
        <li><a href="/Contatos/Alfa?letra=I">I</a></li>
        <li><a href="/Contatos/Alfa?letra=J">J</a></li>
        <li><a href="/Contatos/Alfa?letra=K">K</a></li>
        <li><a href="/Contatos/Alfa?letra=L">L</a></li>
        <li><a href="/Contatos/Alfa?letra=M">M</a></li>
        <li><a href="/Contatos/Alfa?letra=N">N</a></li>
        <li><a href="/Contatos/Alfa?letra=O">O</a></li>
        <li><a href="/Contatos/Alfa?letra=P">P</a></li>
        <li><a href="/Contatos/Alfa?letra=Q">Q</a></li>

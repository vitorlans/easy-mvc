        <li><a href="/Contatos/Alfa?letra=Y">Y</a></li>
        <li><a href="/Contatos/Alfa?letra=Z">Z</a></li>
    </ul>

    <div id="Layer1" style="left: 10px; top: 20px; height: 300px; z-index: 1; overflow: auto">
        <div class="list-group ">
            @foreach (var item in Model)
            {
                <div class="list-group-item ">
                    <div class="row-picture">
                        <img class="circle" src="@item.Imagem" alt="icon">
                    </div>
                    <div class="row-content">
                        <h3>
                            @using (Html.BeginForm("Detalhes","Contatos",FormMethod.Post))
                            { 
                                <input type="hidden" value="@item.IdUser" name="id" id="id"/>                                
                                @Html.ActionLink(item.Nome, "Detalhes", "Contatos", null, new { @class = "saveButton", onclick = "return false;" })              
                
                            }

                        </h3>
                    </div>
                </div>
                <div class="list-group-separator"></div>
            }

        </div>

    </div>
</div>
<script>
    $(document).ready(function(){
        $('.saveButton').click(function(){
            $(this).closest('form')[0].submit();
            });
        });
</script>
@{
    ViewBag.Title = "Pagina Inicial";

    Easy.Models.DAOTarefas dtar = new Easy.Models.DAOTarefas();
    List<string> listaDados = new List<string>();
    listaDados.AddRange(dtar.ListaDadosInicial());

    var tarefasA = "0";
    var tarefasAt = "0";
    var compA = "0";
    var compAt = "0";
    
